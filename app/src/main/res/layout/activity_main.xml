<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:background="#B4C200"
        android:id="@+id/music_button"
        android:layout_width="195dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:onClick="buttonClicked"
        android:text="@string/music_button"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:background="#B4C200"
        android:id="@+id/movie_button"
        android:layout_width="191dp"
        android:layout_height="94dp"
        android:layout_marginTop="32dp"
        android:onClick="buttonClicked"
        android:text="@string/movie_button"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_button" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/choose"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:text="@string/choice"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_button" />

</androidx.constraintlayout.widget.ConstraintLayout>